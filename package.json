{
  "name": "react-boilerplate",
  "version": "0.0.1",
  "description": "Lightweight boilerplate for React with Redux, Babel and Webpack.",
  "main": "server.js",
  "scripts": {
    "analyze": "NODE_ENV=production webpack --json | webpack-bundle-size-analyzer",
    "build": "NODE_ENV=production webpack",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint */stylesheets/**/*",
    "lint:js": "eslint . --ext js,jsx",
    "prod": "NODE_ENV=production node server",
    "start": "node server",
    "translate": "rm -rf build && webpack && babel-node --presets=es2015 scripts/translate"
  },
  "pre-commit": [
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goominc/react-boilerplate.git"
  },
  "keywords": [
    "react",
    "redux",
    "babel",
    "webpack"
  ],
  "author": "Goom Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/goominc/react-boilerplate/issues"
  },
  "homepage": "https://github.com/goominc/react-boilerplate#readme",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.0",
    "babel-plugin-react-intl": "^2.3.1",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-3": "^6.22.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "extract-text-webpack-plugin": "beta",
    "glob": "^7.1.1",
    "json-loader": "^0.5.4",
    "json-stable-stringify": "^1.0.1",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.0",
    "pre-commit": "^1.2.2",
    "sass-loader": "^6.0.0",
    "style-loader": "^0.13.1",
    "stylelint": "^7.8.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-order": "^0.2.2",
    "webpack-bundle-size-analyzer": "^2.5.0"
  },
  "dependencies": {
    "body-parser": "^1.16.1",
    "connect": "^3.5.1",
    "express": "^4.14.1",
    "flat": "^2.0.1",
    "lodash.omit": "^4.5.0",
    "mobile-detect": "^1.3.5",
    "morgan": "^1.8.1",
    "pug": "^2.0.0-beta6",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-intl": "^2.2.3",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-logger": "^2.8.1",
    "redux-thunk": "^2.2.0",
    "superagent": "^3.4.3",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-hot-middleware": "^2.16.1"
  }
}
