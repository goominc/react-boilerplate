{
  "name": "react-boilerplate",
  "version": "0.0.1",
  "description": "Lightweight boilerplate for React with Redux, Babel and Webpack.",
  "main": "server.js",
  "scripts": {
    "analyze": "NODE_ENV=production webpack --json | webpack-bundle-size-analyzer",
    "build": "NODE_ENV=production webpack",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint */stylesheets/**/*",
    "lint:js": "eslint . --ext js,jsx",
    "prod": "NODE_ENV=production node server",
    "start": "node server",
    "translate": "rm -rf build && webpack && babel-node --presets=es2015 scripts/translate"
  },
  "pre-commit": [
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goominc/react-boilerplate.git"
  },
  "keywords": [
    "react",
    "redux",
    "babel",
    "webpack"
  ],
  "author": "Goom Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/goominc/react-boilerplate/issues"
  },
  "homepage": "https://github.com/goominc/react-boilerplate#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-react-intl": "^2.3.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.4.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "beta",
    "glob": "^7.1.2",
    "json-loader": "^0.5.7",
    "json-stable-stringify": "^1.0.1",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.3",
    "pre-commit": "^1.2.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-order": "^0.6.0",
    "webpack-bundle-size-analyzer": "^2.7.0"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "connect": "^3.6.3",
    "express": "^4.15.3",
    "flat": "^4.0.0",
    "lodash.omit": "^4.5.0",
    "mobile-detect": "^1.3.6",
    "morgan": "^1.8.2",
    "pug": "^2.0.0-rc.3",
    "redux-logger": "^3.0.6",
    "webpack": "^3.4.1",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.18.2"
  }
}
