{
  "name": "react-boilerplate",
  "version": "0.0.1",
  "description": "Lightweight boilerplate for React with Redux, Babel and Webpack.",
  "main": "server.js",
  "scripts": {
    "analyze": "NODE_ENV=production webpack --json | webpack-bundle-size-analyzer",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint */stylesheets/**/*",
    "lint:js": "eslint . --ext js,jsx",
    "publish": "NODE_ENV=production webpack",
    "prod": "NODE_ENV=production node server",
    "start": "node server",
    "translate": "rm -rf build && webpack && babel-node --presets=es2015 scripts/translate"
  },
  "pre-commit": [
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goominc/react-boilerplate.git"
  },
  "keywords": [
    "react",
    "redux",
    "babel",
    "webpack"
  ],
  "author": "Goom Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/goominc/react-boilerplate/issues"
  },
  "homepage": "https://github.com/goominc/react-boilerplate#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-plugin-react-intl": "^2.2.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-3": "^6.17.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-import-resolver-webpack": "^0.7.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "glob": "^7.1.1",
    "json-loader": "^0.5.4",
    "json-stable-stringify": "^1.0.1",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.11.2",
    "pre-commit": "^1.1.3",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "stylelint": "^7.5.0",
    "stylelint-config-standard": "^14.0.0",
    "webpack-bundle-size-analyzer": "^2.2.0"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "connect": "^3.5.0",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "flat": "^2.0.1",
    "lodash.omit": "^4.5.0",
    "mobile-detect": "^1.3.3",
    "morgan": "^1.7.0",
    "pug": "^2.0.0-beta6",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-intl": "^2.1.5",
    "react-redux": "^4.4.5",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0",
    "redux-logger": "^2.7.4",
    "redux-thunk": "^2.1.0",
    "superagent": "^2.3.0",
    "webpack": "^1.13.3",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.1"
  }
}
