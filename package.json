{
  "name": "react-boilerplate",
  "version": "0.0.1",
  "description": "Lightweight boilerplate for React with Redux, Babel and Webpack.",
  "main": "server.js",
  "scripts": {
    "analyze": "npm run --silent publish -- --json | webpack-bundle-size-analyzer",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint */stylesheets/**/*",
    "lint:js": "eslint . --ext js,jsx",
    "publish": "NODE_ENV=production webpack",
    "prod": "NODE_ENV=production node server",
    "start": "node server",
    "translate": "node scripts/translate"
  },
  "pre-commit": [
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goominc/react-boilerplate.git"
  },
  "keywords": [
    "react",
    "redux",
    "babel",
    "webpack"
  ],
  "author": "Goom Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/goominc/react-boilerplate/issues"
  },
  "homepage": "https://github.com/goominc/react-boilerplate#readme",
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-react-intl": "^2.2.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-3": "^6.17.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.8.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-import-resolver-webpack": "^0.6.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "glob": "^7.1.1",
    "json-loader": "^0.5.4",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.10.1",
    "pre-commit": "^1.1.3",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "stylelint": "^7.5.0",
    "stylelint-config-standard": "^13.0.2",
    "webpack-bundle-size-analyzer": "^2.2.0",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "connect": "^3.5.0",
    "express": "^4.14.0",
    "lodash.omit": "^4.5.0",
    "mobile-detect": "^1.3.3",
    "morgan": "^1.7.0",
    "redux-actions": "^0.12.0",
    "redux-logger": "^2.7.0",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.1.0",
    "webpack": "^1.13.2",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.0"
  }
}
